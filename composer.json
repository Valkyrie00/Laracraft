{
    "name": "valkyrie/laracraft",
    "description": " --- ",
    "license": "MIT",
    "authors": [
        {
            "name": "dev",
            "email": "dev@dev.dev"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4",
        "phpspec/phpspec": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Valkyrie\\Laracraft\\": "src/"
        },
        "psr-0": {
           "Valkyrie\\Laracraft": "src/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "php -r \"copy('src/Install/index.php', '../../install.php');\""
        ],
        "post-install-cmd": [
            "php -r \"copy('src/Install/index.php', '../../install.php');\""
        ],
        "post-root-package-install": [
            "php -r \"copy('src/Install/index.php', '../../install.php');\""
        ],
        "post-package-install:": [
            "php -r \"copy('src/Install/index.php', '../../install.php');\""
        ]
    }
}
